<%- include ('./base/header.ejs')  %>

<style>
    .bg-light-pink {
      background-color: rgb(180 137 143); 
    }
  </style>

<div class="container my-3">
    <div class="alert bg-light-pink mt-3">
        <h4 class="text-center">All Records</h4>
    </div>
</div>

<div class="container">
    <table class="table text-center">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>Details</th> <!-- Add this column -->
            </tr>
        </thead>

        <tbody>
            <% if (records) { %>

                <% for(var i=0; i< records.length; i++){ %>
            <tr>
                <td><%= records[i].name %></td>
                <td><%= records[i].city %></td>
                <td><%= records[i].email %></td>
                <td><%= records[i].contact %></td>
                <td>
                    <a href="/edit/<%= records[i]._id %>" class="btn btn-warning w-75">Edit</a>
                </td>
                <td>
                    <form action="/delete/<%= records[i]._id %>" method="get">
                        <input type="submit" value="Delete" class="btn btn-danger" >
                    </form>
                </td>
                <td>
                    <a href="/details/<%= records[i]._id %>" class="btn btn-info w-75">View Details</a> <!-- Add this button -->
                </td>
            </tr>
            <% } %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include ('./base/footer.ejs')  %>
